@using Common
@{
    Layout = "~/Areas/student/Views/Shared/_main.cshtml";
}
<div class="module">
    <div class="module-head">
        <h3>
            社团
        </h3>
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
               width="100%">
            <thead>
                <tr>

                    <th>
                        社团编号
                    </th>
                    <th>
                        社团名称
                    </th>
                    <th>
                        加入时间
                    </th>
                    <th>
                        退出社团
                    </th>
                </tr>
            </thead>
            <tbody>
                @{

                    try
                    {
                        foreach (Model.clubmember i in Model)
                        {
                            int temp = 1;
                            if (temp % 2 == 0)
                            {
                                <tr class="gradeX">
                                    <td>@i.clubid</td>
                                    <td>@Common.Club.getClubName(@i.clubid);</td>
                                    <td>@i.date</td>
                                    <td><a href="/student/Mine/quit?id=@i.id">退出</a></td>
                                </tr>
                            }
                            else
                            {
                                <tr class="odd gradeX">
                                    <td>@i.clubid</td>
                                    <td>@Common.Club.getClubName(@i.clubid);</td>
                                    <td>@i.date</td>
                                    <td><a href="/student/Mine/quit/@i.id">退出</a></td>
                                </tr>
                            }
                        }
                    }
                    catch (Exception)
                    {

                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>

                }
                }
                </tbody>

            </table>
        </div>
    </div>