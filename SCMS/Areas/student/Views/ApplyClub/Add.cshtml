@{
    Layout = "~/Areas/student/Views/Shared/_main.cshtml";
}

<div class="content">
    <div class="module">
        <div class="module-head">
            <h3>创办社团</h3>
        </div>
        <div class="alert alert-error" style="display:none" id="errMSG">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>验证错误!</strong> 申请格式是否正确?
        </div>
        @{
        try
        {
            if (!ViewBag.Success)
            {
                <div class="alert alert-error">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>提交错误!</strong> 信息是否正确?
                </div>



        }
        else
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>提交成功!</strong>  :)
            </div>
    }
}
catch (Exception)
{
    //this.Response.Redirect("/student/Home");
}
        }
        <div class="module-body">
            <br>
            <form class="form-horizontal row-fluid" action="/student/ApplyClub/ExecAdd" onsubmit="return check()">
                <div class="control-group">
                    <label class="control-label" for="basicinput">社团名称</label>
                    <div class="controls">
                        <input id="name" name="name" placeholder="请输入…" data-original-title="" class="span8 tip" type="text">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="basicinput">社团logo</label>
                    <div class="controls">
                        <input id="logo" name="logo" placeholder="请输入地址…" data-original-title="" class="span8 tip" type="text">
                    </div>
                </div>
                <div class="control-group">
                <label class="control-label" for="basicinput">描述</label>
                <div class="controls">
                    <input id="des" name="des" placeholder="请输入…" data-original-title="" class="span8 tip" type="text">
                </div>
        </div>
        <div class="control-group">
            <div class="controls ">
                <button type="submit" class="btn-inverse btn-large">提交</button>
            </div>
        </div>
        </form>
    </div>
    </div>
    <script type="text/javascript">
        function check() {
            var name = document.getElementById("name").value;
            var logo = document.getElementById("logo").value;
            var des = document.getElementById("des").value;
            var err = document.getElementById("errMSG");
            if (name == "" || logo == "" || des == "") {
                err.style.display = "";
                return false;
            }
            else {
                err.style.display = "none";
                return true;
            }

        }
    </script>
</div><!--/.content-->
