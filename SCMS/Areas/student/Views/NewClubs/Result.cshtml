@using Common
@{
    Layout = "~/Areas/student/Views/Shared/_main.cshtml";
}
<div class="module">
    <div class="module-head">
        <h3>
            申请结果
        </h3>
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
               width="100%">
            <thead>
                <tr>
                    <th>
                        申请编号
                    </th>
                    <th>
                        社团编号
                    </th>
                    <th>
                        社团名称
                    </th>
                    <th>
                        申请时间
                    </th>
                    <th>
                        申请状态
                    </th>
                    <th>
                        社团详情
                    </th>
                    <th>
                        设为已读
                    </th>
                </tr>
            </thead>
            <tbody>
                @{

                    try
                    {
                        foreach (Model.newmember i in Model)
                        {
                            int temp = 1;
                            if (temp % 2 == 0)
                            {
                <tr class="gradeX">
                    <td>@i.id</td>
                    <td>@i.clubID</td>
                    <td>@Common.Club.getClubName(@i.clubID);</td>
                    <td>@i.time</td>
                    <td>@i.state</td>
                    <td><a href="/student/Clubs/Info/@i.id">详情</a></td>
                    <td><a href="/student/NewClubs/Read/@i.id">设为已读</a></td>
                </tr>
                            }
                            else
                            {
                                <tr class="odd gradeX">
                                    <td>@i.id</td>
                                    <td>@i.clubID</td>
                                    <td>@Common.Club.getClubName(@i.clubID);</td>
                                    <td>@i.time</td>
                                    <td>@i.state</td>
                                    <td><a href="/student/Clubs/Info/@i.id">详情</a></td>
                                    <td><a href="/student/NewClubs/Read/@i.id">设为已读</a></td>
                                </tr>
                            }
                        }
                    }
                    catch (Exception)
                    {
                                <tr>
                                    <td>暂无数据</td>
                                    <td>暂无数据</td>
                                    <td>暂无数据</td>
                                    <td>暂无数据</td>
                                    <td>暂无数据</td>
                                    <td>暂无数据</td>
                                    <td>暂无数据</td>
                                </tr>
                }
                }
                </tbody>

            </table>
        </div>
    </div>