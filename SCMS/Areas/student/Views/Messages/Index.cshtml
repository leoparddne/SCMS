@using Common
@{
    Layout = "~/Areas/student/Views/Shared/_main.cshtml";
}
<div class="alert alert-error" style="display:none" id="errorMSG">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <strong>评论错误!</strong> 请重试，不可发送空评论。
</div>
<div class="module">
    <div class="module-head">
        <h3>
            我的通知
        </h3>
    </div>
    <script type="text/javascript">
    </script>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
               width="100%">
            <thead>
                <tr>

                    <th>
                        消息编号
                    </th>
                    <th>
                        来自
                    </th>
                    <th>
                        主题
                    </th>
                    <th>
                        内容
                    </th>
                    <th>
                        设为已读
                    </th>
                </tr>
            </thead>

            <tbody>
                @{

                    try
                    {
                        foreach (Model.message i in Model)
                        {
                            int temp = 1;
                            if (temp % 2 == 0)
                            {
                                <tr class="gradeX">
                                    <td>@i.id</td>
                                    <td>@i.from</td>
                                    <td>@i.subject</td>
                                    <td>@i.context</td>
                                    <td><a href="/student/Messages/Read/@i.id">设为已读</a></td>
                            </tr>
                            }
                            else
                            {
                                <tr class="odd gradeX">
                                    <td>@i.id</td>
                                    <td>@i.from</td>
                                    <td>@i.subject</td>
                                    <td>@i.context</td>
                                    <td><a href="/student/Messages/Read/@i.id">设为已读</a>
                                </tr>
                            }
                        }
                    }
                    catch (Exception)
                    {
                        <tr>
                            <td>暂无数据</td>
                            <td>暂无数据</td>
                            <td>暂无数据</td>
                            <td>暂无数据</td>
                            <td>暂无数据</td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>
</div>
