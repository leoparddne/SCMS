@using Common
@{
    Layout = "~/Areas/manager/Views/Shared/_main.cshtml";
}
<div class="module">
    <div class="module-head">
        <h3>
            社团活动
        </h3>
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
               width="100%">
            <thead>
                <tr>
                    <th>
                        社团编号
                    </th>
                    <th>
                        社团名称
                    </th>
                    <th>
                        活动编号
                    </th>
                    <th>
                        活动名称
                    </th>
                    <th>
                        活动地点
                    </th>
                    <th>
                        活动时间
                    </th>
                    <th>
                        活动描述
                    </th>
                    <th>
                        社团详情
                    </th>
                    <th>
                        详情
                    </th>
                </tr>
            </thead>
            <tbody>
                @{

                    try
                    {
                        foreach (SCMS.Areas.student.Models.Activity i in Model)
                        {
                            int temp = 1;
                            if (temp % 2 == 0)
                            {
                <tr class="gradeX">
                    <td>@i.ClubID</td>
                    <td>@i.ClubName</td>
                    <td>@i.ActivityID</td>
                    <td>@i.ActivityName</td>
                    <td>@i.ActivityPlace</td>
                    <td>@i.ActivityTime</td>
                    <td>@i.ActivityInfo</td>
                    <td><a href="/manager/Clubs/Info/@i.ClubID">详情</a></td>
                    <td><a href="/manager/Activity/Info/@i.ActivityID">详情</a></td>
                </tr>
                            }
                            else
                            {
                <tr class="odd gradeX">
                    <td>@i.ClubID</td>
                    <td>@i.ClubName</td>
                    <td>@i.ActivityID</td>
                    <td>@i.ActivityName</td>
                    <td>@i.ActivityPlace</td>
                    <td>@i.ActivityTime</td>
                    <td>@i.ActivityInfo</td>
                    <td><a href="/manager/Clubs/Info/@i.ClubID">详情</a></td>
                    <td><a href="/manager/Activity/Info/@i.ActivityID">详情</a></td>
                </tr>
                            }
                        }
                    }
                    catch (Exception)
                    {
                <tr>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                </tr>
                }
                }
                </tbody>

            </table>
        </div>
    </div>