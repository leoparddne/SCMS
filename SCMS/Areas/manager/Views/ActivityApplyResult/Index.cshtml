@using Common
@{
    Layout = "~/Areas/manager/Views/Shared/_main.cshtml";
}
<div class="module">
    <div class="module-head">
        <h3>
            社团活动
        </h3>
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
               width="100%">
            <thead>
                <tr>
                    <th>
                        活动编号
                    </th>
                    <th>
                        活动名称
                    </th>
                    <th>
                        活动地点
                    </th>
                    <th>
                        活动时间
                    </th>
                    <th>
                        其他信息
                    </th>
                    <th>
                        是否通过
                    </th>
                    <th>
                        设为已读
                    </th>
                </tr>
            </thead>
            <tbody>
                @{

                    try
                    {
                        foreach (Model.clubactivity i in Model)
                        {
                            int temp = 1;
                            if (temp % 2 == 0)
                            {
                <tr class="gradeX">
                    <td>@i.id</td>
                    <td>@i.name</td>
                    <td>@i.place</td>
                    <td>@i.time</td>
                    <td>@i.other</td>
                    <td>@i.state</td>
                    <td><a href="/manager/ActivityApplyResult/Read/@i.id">设为已读</a></td>
                </tr>
                            }
                            else
                            {
                <tr class="odd gradeX">
                    <td>@i.id</td>
                    <td>@i.name</td>
                    <td>@i.place</td>
                    <td>@i.time</td>
                    <td>@i.other</td>
                    <td>@i.state</td>
                    <td><a href="/manager/ActivityApplyResult/Read/@i.id">设为已读</a></td>
                </tr>
                            }
                        }
                    }
                    catch (Exception)
                    {
                <tr>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                    <td>暂无数据</td>
                </tr>
                }
                }
                </tbody>

            </table>
        </div>
    </div>